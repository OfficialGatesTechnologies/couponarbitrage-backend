{
    "extends": ["eslint:recommended"],
    "env": {
    "node": true,
    "mocha": true,
    "es6": true
    },
    "rules": {
    "space-before-blocks": "warn",
    "arrow-spacing": "warn",
    "keyword-spacing": "warn",
    "space-infix-ops": "warn",
    "space-in-parens": "warn",
    "spaced-comment": "warn",
    "semi": "warn",
    "no-multiple-empty-lines": ["error", {"max": 1}],
    "eol-last": "error",
    "handle-callback-err": "error",
    "camelcase": "warn",
    "comma-spacing": "warn",
    "quotes": ["error", "single"]    
    }
    {
        "parserOptions": {
            "ecmaVersion": 2017
        }
    }
}